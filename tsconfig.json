{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "jsx": "react",
        "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist/esm",
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "allowJs": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["./node_modules/**/*"]
}
